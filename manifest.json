// manifest.json - MODIFICADO v0.4.3 - Added i18n default_locale
{
  "manifest_version": 3,
  "name": "__MSG_extensionName__", // Use message key
  "version": "0.4.3", // Incremented version
  "description": "__MSG_extensionDescription__", // Use message key
  "default_locale": "en", // Specify English as the default
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content_script.js"],
      "css": ["chat_styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "__MSG_popupTitle__", // Use message key
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}